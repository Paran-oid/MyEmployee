@{
    ViewData["Title"] = "Home Page";
}
<style>
    p {
        font-size: 18px; 
        line-height: 1.6;
        color: #333;
    }

    p a {
        color: forestgreen; 
        text-decoration: none;
        font-weight: bold; 
    }

    p a:hover {
        text-decoration: underline; 
    }
    body {
        overflow-y: auto;
        font-family: Arial, sans-serif;
    }
    .custom-padding {
        padding-bottom: 80px;
        padding-top: 80px;
    }
    .hero-section {
        position: relative;
        background-image: url('@Url.Content("~/Site Images/Home/Hero pic.jpg")');
        background-size: cover;
        background-position: center;
        height: 500px;
        overflow: hidden;
        background-repeat: no-repeat;
    }
    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.75); 
    }
    .hero-content {
        position: relative;
        z-index: 1;
        text-align: center;
        color: white;
        height: 100%;
    }
    .my-row {
        background-color: #F7F7F7;
    }
    .my-img {
        height: 150px; /* Set the height as needed */
        width: auto; /* Let the width adjust proportionally */
    }
</style>
@* hero section *@
@section containerFluid
{
    <div class="row">
        <div class="hero-section">
            <div class="overlay rounded-3"></div>
            <div class="hero-content d-flex justify-content-center align-items-center rounded-3">
                <div class="text-center">
                    <h1 style="font-size: 72px">My Employee</h1>
                    <p class="mt-5" style="font-size: 20px; color: navajowhite">The best assistant for managing your business</p>
                </div>
            </div>
        </div>
    </div>
}
@* Introduction *@
<section id="Introduction" class="container custom-padding mt-5">
    <div class="row">
        <div class="col-12 text-center">
            <h2 class="mb-4" style="font-size: 50px">Manage Your Business <span style="color: forestgreen">Efficiently</span> <img src="~/Site Images/Home/financial-profit.png" height="80px"/></h2>
            <p class="fw-bold">My Employee is a website that helps you manage your employees <br /> by assigning tasks, grouping them together, and much more.</p>
        </div>
    </div>
</section>
@* Employees *@
<section id="Employees" class="container custom-padding mt-5">
    <div class="row">
        <div class="col-lg-6">
            <img src="~/Site Images/Home/F1 pic.jpg" class="img-fluid rounded" />
        </div>
        <div class="col-lg-6 text-center">
            <h1>Managing Users</h1>
            <p class="text-start mt-5" style="font-size: 26px">Manage as many employees as possible and choose what you want to do, including giving raises, promotions/demotions, and vacations. <a href="#">Learn more</a></p>
        </div>
    </div>
</section>
@* Groups *@
<section id="Groups" class="container custom-padding mt-5">
    <div class="row">
        <div class="col-lg-6 text-center">
            <h1>Managing Groups</h1>
            <p class="text-start mt-5" style="font-size: 26px">Add your employees to groups and assign them tasks to organize your work environment. <a href="#">Learn more</a></p>
        </div>
        <div class="col-lg-6">
            <img src="~/Site Images/Home/F2 pic.jpg" class="img-fluid rounded" />
        </div>
    </div>
</section>
@* Other services *@
<section id="OS" class="container custom-padding mt-5">
    <div class="row d-flex justify-content-center">
        <h2 class="text-center mb-5">Other Services</h2>
        <div class="col-lg-4 text-center">
            <img src="~/Site Images/Home/Entrepreneurs.png" class="img-fluid rounded my-img" />
            <h3 class="mt-3">Cooperation</h3>
            <p>Share your employee data with anyone you want.</p>
        </div>
        <div class="col-lg-4 text-center">
            <img src="~/Site Images/Home/device.png" class="img-fluid rounded my-img" />
            <h3 class="mt-3">Cross-platform Usage</h3>
            <p>Use the app on your phone, iPad, computer, and even your TV.</p>
        </div>
        <div class="col-lg-4 text-center">
            <img src="~/Site Images/Home/check.png" class="img-fluid rounded my-img" />
            <h3 class="mt-3">Easy To Use</h3>
            <p>Simple yet effective.</p>
        </div>
    </div>
</section>
@* Sign *@
<section class="container custom-padding mt-5 my-row">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h2>What are you waiting for?</h2>
            <p>Join us now! It's completely free!</p>
        </div>
        <div class="text-center">
            <a asp-area="Identity" asp-page="/Account/Register"><button class="btn btn-success text-center" style="width: 75px">Join</button></a>
        </div>
    </div>
</section>
