<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyEmployee</title>
    <link rel="icon" href="~/Site Images/man.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyEmployee.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/all.css" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <header class="mb-5">
            <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #1f1e1d">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Main" asp-action="Overview">MyEmployee</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="nav-link text-light ms-3" asp-area="" asp-controller="Main" asp-action="Overview"><i class="fa-solid fa-house"></i> Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light ms-3" asp-area="" asp-controller="Main" asp-action="Employees"><i class="fa-solid fa-users"></i> Employees</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light ms-3" asp-area="" asp-controller="Main" asp-action="Groups"><i class="fa-solid fa-layer-group"></i> Groups</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light ms-3" asp-area="" asp-controller="Main" asp-action="Projects"><i class="fa-solid fa-diagram-project"></i> Projects</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light ms-3" asp-area="" asp-controller="Home" asp-action="STI"><i class="fa-solid fa-computer"></i> STI</a>
                            </li>
                        </ul>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        </header>
    }
    else if (ViewContext?.RouteData?.Values["Action"]?.ToString() == "Index" && ViewContext?.RouteData?.Values["Controller"]?.ToString()=="Home")
    {
        <partial name="_HomeNav" />
    }
    else
    {
        <div class="mb-5">

        </div>
    }

    <div class="container-fluid">
        @RenderSection("containerFluid", required: false)
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color: #F7F7F7">
        <div class="container text-center">
            &copy; 2024 - MyEmployee
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
