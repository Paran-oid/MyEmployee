@{
    ViewData["Title"] = "Overview";
}
<h2>@ViewData["Welcome"]</h2>
<h1>@ViewData["Title"]</h1>
<div class="container">
    <div class="row offset-5 mb-5 mt-5">
        <button class="col-2 border-0" onclick="randimage()">Click me ;)</button><br />
    </div>
    <div class="row offset-4 mb-5 mt-5">
        <img id="randImg" src="" style="width:400px;" />
    </div>
</div>
@section Scripts {
    <script>
        //this is how to make it so when you click a button you get a random image
        function getRandElement(arr) {
            return arr[Math.floor(Math.random() * arr.length)];
        }
        function randimage()
        {
            var images = [
                "aaarslen1.jpg",
                "bouaaaza1.jpg",
                "bouaaaza2.jpg",
                "bouaaaza3.jpg",
                "jootaro1.jpg"
            ];
            var randomImage = getRandElement(images);
            document.getElementById("randImg").src = "@Url.Content("~/Site Images/Easter Eggs/")" + randomImage;
        }
    </script>
}